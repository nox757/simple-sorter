<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

    <changeSet id="2" author="chibisov">
        <createTable tableName="country">
            <column name="country_id" type="bigint">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="region">
            <column name="region_id" type="bigint">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="country_id" type="bigint"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="region"
                                 baseColumnNames="country_id"
                                 constraintName="fk_region_county_id"
                                 referencedTableName="country"
                                 referencedColumnNames="country_id"/>
        <createTable tableName="city">
            <column name="city_id" type="bigint">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="region_id" type="bigint"/>
            <column name="mayor_id" type="bigint"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="city"
                                 baseColumnNames="region_id"
                                 constraintName="fk_city_region_id"
                                 referencedTableName="region"
                                 referencedColumnNames="region_id"/>

        <createTable tableName="mayor">
            <column name="mayor_id" type="bigint">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="fio" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="city_id" type="bigint"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="mayor"
                                 baseColumnNames="city_id"
                                 constraintName="fk_mayor_city_id"
                                 referencedTableName="city"
                                 referencedColumnNames="city_id"
                                 deleteCascade="true"/>
        <addForeignKeyConstraint baseTableName="city"
                                 baseColumnNames="mayor_id"
                                 constraintName="fk_city_mayor_id"
                                 referencedTableName="mayor"
                                 referencedColumnNames="mayor_id"/>

        <createTable tableName="attributetype">
            <column name="attribute_type_id" type="bigint">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
     
        <createTable tableName="attribute">
            <column name="attribute_id" type="bigint">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="varchar(255)"/>
            <column name="attribute_type_id" type="bigint"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="attribute"
                                 baseColumnNames="attribute_type_id"
                                 constraintName="fk_attribute_attributetype_id"
                                 referencedTableName="attributetype"
                                 referencedColumnNames="attribute_type_id"/>
        <createTable tableName="city_attribute">
            <column name="city_id" type="bigint"/>
            <column name="attribute_id" type="bigint"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="city_attribute"
                                 baseColumnNames="attribute_id"
                                 constraintName="fk_city_attribute_attribute_id"
                                 referencedTableName="attribute"
                                 referencedColumnNames="attribute_id"/>
        <addForeignKeyConstraint baseTableName="city_attribute"
                                 baseColumnNames="city_id"
                                 constraintName="fk_city_attribute_city_id"
                                 referencedTableName="city"
                                 referencedColumnNames="city_id"/>
        <addPrimaryKey tableName="city_attribute" columnNames="city_id, attribute_id" constraintName="pk_city_attribute"/>
    </changeSet>
</databaseChangeLog>